@model GPS_Taxi.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>Вхід у систему</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <span class=" control-label">Логін</span>
                    <div class="">
                        <input type="text" name="login" value="" placeholder="Логін користувача" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <span class=" control-label">Пароль</span>
                    <div class="">
                        <input type="password" name="password" value="" placeholder="Пароль користувача" class="form-control"  />
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-10">
                        <input type="submit" value="Увійти" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}