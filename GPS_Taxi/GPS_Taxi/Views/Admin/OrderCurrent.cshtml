@model IEnumerable<GPS_Taxi.Models.order>

@{
    ViewBag.Title = "OrderCurrent";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Поточні замовлення</h2>

<section class="container operator-view">
    <div class="table-orders">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Звідки</td>
                    <td>Куди</td>
                    <td>Час</td>
                    <td>Відстань</td>
                    <td>Ціна</td>
                    <td>Номер телефону</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                { 
                    <tr>
                        <td>@item.start_location</td>
                        <td>@item.end_location</td>
                        <td>@item.time_road хв</td>
                        <td>@item.distance км</td>
                        <td>@item.price грн</td>
                        <td>@item.telephone_number</td>
                        <td>
                            <a href='@Url.Action("MakeOrder", "Admin", new { ID = @item.id })'>Призначити машину</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

